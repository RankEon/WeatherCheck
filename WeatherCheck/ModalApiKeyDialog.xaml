<Window x:Class="WeatherCheck.ModalApiKeyDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeatherCheck"
        mc:Ignorable="d"
        Title="Enter API Key" Height="120" Width="290" ResizeMode="NoResize">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label Content="Please enter an API key for OpenWeatherMap"  />
            <TextBox Name="tbApiKey" ToolTip="Type an API Key" />
            <StackPanel Orientation="Horizontal">
                <Button Name="btnOK" Content="OK" Click="btnOK_click" Width="60" Margin="5"/>
                <Button Name="btnCancel" Content="Cancel" Click="btnCancel_click" Width="60" Margin="5" />
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
